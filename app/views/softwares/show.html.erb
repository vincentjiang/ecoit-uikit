<%= provide :title, "Software-#{@software.name}" %>

<h1>Show software</h1>

<hr>

<dl class="uk-grid">
  <div class="uk-width-medium-1-4">
    <dt>Software Name</dt>
    <dd><%= @software.name %></dd>
  </div>
  <div class="uk-width-medium-1-4">  
    <dt>Operation system</dt>
    <dd><%= @software.kind %></dd>
  </div>
</dl>

<dl class="uk-grid">
  <div class="uk-width-medium-1-4">
    <dt>Serial number</dt>
    <dd><%= @software.sn %></dd>
  </div>
  <div class="uk-width-medium-1-4">  
    <dt>Service expired day</dt>
    <dd><%= @software.service_expired_day %></dd>
  </div>
</dl>

<% if @software.function.present? %>
  <dl class="uk-grid">
    <div class="uk-width-medium-1-2">
      <dt>Function</dt>
      <dd><%= @software.function %></dd>
    </div>
  </dl>
<% end %>

<% if @software.remark.present? %>
  <dl class="uk-grid">
    <div class="uk-width-medium-1-2">
      <dt>Remark</dt>
      <dd><%= @software.remark %></dd>
    </div>
  </dl>
<% end %>

<dl class="uk-grid">
  <div class="uk-width-medium-1-4">
    <dt>Create by</dt>
    <dd><%= @software.user.username %></dd>
  </div>
</dl>

<br>

<%= link_to edit_software_path(@software), class: "uk-button uk-button-success" do %>
  Edit <i class="uk-icon-pencil"></i>
<% end %>
<%= link_to 'Back', softwares_path, class: "uk-button uk-button-link" %>
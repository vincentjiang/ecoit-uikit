<%= provide :title, "Listing softwares" %>

<div id="users-list" class="uk-container uk-container-center">
  
  <div class="uk-grid">
    
    <div class="eco-sidebar uk-width-medium-1-4">

      <%= render 'assets/sidebar' %>

    </div>

    <div class="eco-main uk-width-medium-3-4">

      <h1>Listing softwares</h1>

      <table class="uk-table uk-table-hover uk-table-striped uk-table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Kind</th>
            <th>Sn</th>
            <th>Service expired day</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <%= render @softwares %>
        </tbody>
      </table>

      <br>

      <%= link_to new_software_path, class: "uk-button uk-button-large uk-button-success" do %>
        New Software <i class="uk-icon-arrow-circle-right"></i>
      <% end %>

    </div>

  </div>

</div>

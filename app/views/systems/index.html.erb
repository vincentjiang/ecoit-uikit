<%= provide :title, "Listing systems" %>

<div id="users-list" class="uk-container uk-container-center">
  
  <div class="uk-grid">
    
    <div class="eco-sidebar uk-width-medium-1-4">

      <%= render 'assets/sidebar' %>

    </div>

    <div class="eco-main uk-width-medium-3-4">

      <h1>Listing systems</h1>

      <table class="uk-table uk-table-hover uk-table-striped uk-table-condensed">
        <thead>
          <tr>
          <th>Name</th>
          <th>Link</th>
          <th>Account</th>
          <th>Password</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <%= render @systems %>
      </tbody>
    </table>

      <br>

      <%= link_to new_system_path, class: "uk-button uk-button-large uk-button-success" do %>
        New System <i class="uk-icon-arrow-circle-right"></i>
      <% end %>

    </div>

  </div>

</div>
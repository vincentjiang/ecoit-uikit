<tr>
  <td><%= system.name %></td>
  <td class="uk-hidden-small"><%= system.link %></td>
  <td class="uk-hidden-small"><%= system.username %></td>
  <td class="uk-hidden-small"><%= system.password %></td>
  <td>
    <%= link_to system, class: "uk-button uk-button-success uk-button-mini" do %>
      <i class="uk-icon-eye"></i>
    <% end %>
    <%= link_to edit_system_path(system), class: "uk-button uk-button-primary uk-button-mini" do %>
      <i class="uk-icon-pencil"></i>
    <% end %>
    <%= link_to system, method: :delete, data: { confirm: "Are you sure to delete system #{system.name} ?" }, class: "uk-button uk-button-danger uk-button-mini" do %>
      <i class="uk-icon-trash-o"></i>
    <% end %>
  </td>
</tr>
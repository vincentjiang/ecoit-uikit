<%= form_for @network_device, html: { class: "uk-form" } do |f| %>
  <% if @network_device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@network_device.errors.count, "error") %> prohibited this network_device from being saved:</h2>

      <ul>
      <% @network_device.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="uk-grid">
    <div class="uk-width-medium-1-4">
      <%= f.label :name %>
      <%= f.text_field :name, class: "uk-width-1-1", placeholder: "Network device name" %>
    </div>
    <div class="uk-width-medium-1-4">
      <%= f.label :kind %>
      <%= f.text_field :kind, class: "uk-width-1-1", placeholder: "Network device kind" %>
    </div>
  </div>

  <div class="uk-grid">
    <div class="uk-width-medium-1-4">
      <%= f.label :ip %>
      <%= f.text_field :ip, class: "uk-width-1-1", placeholder: "IP Address" %>
    </div>
  </div>

  <div class="uk-grid">
    <div class="uk-width-medium-1-4">
      <%= f.label :place %>
      <%= f.text_field :place, class: "uk-width-1-1", placeholder: "Where is the network device" %>
    </div>
    <div class="uk-width-medium-1-4">
      <%= f.label :position %>
      <%= f.text_field :position, class: "uk-width-1-1", placeholder: "Network device position" %>
    </div>
  </div>

  <div class="uk-grid">
    <div class="uk-width-medium-1-4">
      <%= f.label :sn %>
      <%= f.text_field :sn, class: "uk-width-1-1", placeholder: "Serial Number" %>
    </div>
    <div class="uk-width-medium-1-4">
      <%= f.label :service_expired_day %>
      <%= f.date_field :service_expired_day, class: "uk-width-1-1", placeholder: "yyyy-mm-dd" %>
    </div>
  </div>

  <div class="uk-grid">
    <div class="uk-width-medium-2-3">
      <%= f.label :function %>
      <%= f.text_area :function, class: "uk-width-1-1", rows: 5, placeholder: "Let's know what the network device work for" %>
    </div>
  </div>

  <div class="uk-grid">
    <div class="uk-width-medium-2-3">
      <%= f.label :remark %>
      <%= f.text_area :remark, class: "uk-width-1-1", rows: 5, placeholder: "Some remark optional" %>
    </div>
  </div>

  <div class="uk-grid">
    <div class="uk-width-medium-1-2">
      <%= f.submit class: "uk-button uk-button-large uk-button-primary" %>
      <%= link_to 'Back', servers_path, class: "uk-button uk-button-link" %>
    </div>
  </div>

<% end %>

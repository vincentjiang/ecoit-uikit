<%= provide :title, "Listing network_device" %>

<div id="users-list" class="uk-container uk-container-center">
  
  <div class="uk-grid">
    
    <div class="eco-sidebar uk-width-medium-1-4">

      <%= render 'assets/sidebar' %>

    </div>

    <div class="eco-main uk-width-medium-3-4">

      <h1>Listing network_device</h1>

      <table class="uk-table uk-table-hover uk-table-striped uk-table-condensed">
        <thead>
          <tr>
          <th>Name</th>
          <th class="uk-hidden-small">Kind</th>
          <th class="uk-hidden-small">IP</th>
          <th class="uk-hidden-small">SN</th>
          <th class="uk-hidden-small">Service expired day</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <%= render @network_devices %>
      </tbody>
    </table>

      <br>

      <%= link_to new_network_device_path, class: "uk-button uk-button-large uk-button-success" do %>
        New network_device <i class="uk-icon-arrow-circle-right"></i>
      <% end %>

    </div>

  </div>

</div>

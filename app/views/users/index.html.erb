<% provide :title, "Listing users" %>

<div id="users-list" class="uk-container uk-container-center">
	
	<div class="uk-grid">
    
    <div class="uk-width-medium-1-4">

      <%= render 'sidebar' %>

    </div>


    <div class="eco-main uk-width-medium-3-4">
			<h1><i class="uk-icon-users"></i> Listing users</h1>
			<table class="uk-table uk-table-hover uk-table-striped uk-table-condensed">
				<thead>
					<tr>
						<th>Username</th>
						<th>Email</th>
						<th>Role</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<%= render @users %>
				</tbody>
			</table>

			<br>

			<%= link_to new_user_path, class: "uk-button uk-button-large uk-button-success" do %>
		  	New User <i class="uk-icon-arrow-circle-right"></i>
		  <% end %>
    </div>
	</div>
</div>
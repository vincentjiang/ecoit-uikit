<% provide(:title, "Login") %>

<div class="uk-vertical-align uk-text-center uk-height-1-1">	
	<div class="uk-vertical-align-middle" style="width: 300px;">

		<%= form_for :session, url: sessions_path, class: "uk-form uk-panel uk-panel-box uk-text-center" do |f| %>

			<h1>Please login</h1>

		  <hr>

			<div class="uk-form-row">
			  <div class="uk-form-icon uk-width-1-1">
			  	<i class="uk-icon-user"></i>
					<%= f.text_field :username, placeholder: "Username", class: "uk-form-large uk-width-1-1", required: true %>
				</div>
			</div>

			<br>
			<div class="uk-form-row">
			  <div class="uk-form-icon uk-width-1-1">
			  	<i class="uk-icon-key"></i>
					<%= f.password_field :password, class: "uk-form-large uk-width-1-1" %>
				</div>
			</div>
			<br>

			<%= f.submit "Login", class: "uk-button uk-button-large uk-button-primary uk-width-1-1" %>
		  
		<% end %>
		
	</div>
</div>